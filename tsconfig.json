{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "rootDir": "src",
    "outDir": "types",
    "noUnusedLocals": true,
    "noImplicitReturns": true
  },
  "include": ["./src/index.ts"]
}
